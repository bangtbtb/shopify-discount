{%- assign col_ids = product.collections | map: 'id' -%}

<div id="reaction" product="{{ product.id }}" cols="{{ col_ids | join: "," }}"></div>

<script src="{{ "loadvd.js" | asset_url }}" defer></script>

{% schema %}
{
  "name": "React Block",
  "target": "section",
  "settings": [{ "type": "product", "id": "product", "label": "product", "autofill": true }]
}
{% endschema %}
